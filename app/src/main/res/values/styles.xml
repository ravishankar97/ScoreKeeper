<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyButton">
        <item name="android:layout_height">@dimen/forty</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/five</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
        <item name="android:background">@color/deep_red</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ImageView">
        <item name="android:layout_height">@dimen/seventy</item>
        <item name="android:layout_width">@dimen/seventy</item>
        <item name="android:layout_marginTop">@dimen/ten</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/gold_snitch</item>
        <item name="android:onClick">caughtSnitch</item>
    </style>

    <style name="TopStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/twenty_five</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ScoreCard">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/twelve</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/sixty</item>
    </style>

    <style name="CommentSection">
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginEnd">@dimen/twelve</item>
        <item name="android:layout_marginTop">@dimen/fifteen</item>
        <item name="android:layout_marginStart">@dimen/twelve</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>

</resources>
